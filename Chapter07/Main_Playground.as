package {	import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.Event;	public class Main_Playground extends MovieClip	{		var vx:int;		var vy:int;		public function Main_Playground()		{			init();		}		function init():void		{			//initialize variables			vx = 0;			vy = 0;			//Add event listeners			stage.addEventListener(KeyboardEvent.KEY_DOWN, onKeyDown);			stage.addEventListener(KeyboardEvent.KEY_UP, onKeyUp);			addEventListener(Event.ENTER_FRAME, onEnterFrame);		}		function onKeyDown(event:KeyboardEvent):void		{			if (event.keyCode == Keyboard.LEFT)			{				vx = -5;			}			else if (event.keyCode == Keyboard.RIGHT)			{				vx = 5;			}			else if (event.keyCode == Keyboard.UP)			{				vy = -5;			}			else if (event.keyCode == Keyboard.DOWN)			{				vy = 5;			}		}		function onKeyUp(event:KeyboardEvent):void		{			if (event.keyCode == Keyboard.LEFT || event.keyCode == Keyboard.RIGHT)			{				vx = 0;			}			else if (event.keyCode == Keyboard.DOWN || event.keyCode == Keyboard.UP)			{				vy = 0;			}		}		function onEnterFrame(event:Event):void		{			//Move the player			player.x += vx;			player.y+=vy;		}	}}