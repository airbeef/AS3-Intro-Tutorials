package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	public class Main_DragAndDrop3 extends MovieClip	{		private var _easing:Number;		private var _redSquare:DragableObject;		private var _blueSquare:DragableObject;				public function Main_DragAndDrop3()		{			//Initialize variables			_easing = 0.3;						//Create drag objects using composition			_redSquare = new DragableObject(redSquare, stage);			_blueSquare = new DragableObject(blueSquare, stage);						//Add event listeners			addEventListener(Event.ENTER_FRAME,onEnterFrame);		}		private function onEnterFrame(event:Event):void		{			if (_redSquare.dragObject.hitTestObject(redTarget))			{				if (! _redSquare.isDragging)				{					_redSquare.dragObject.x += (redTarget.x - _redSquare.dragObject.x) * _easing;					_redSquare.dragObject.y += (redTarget.y - _redSquare.dragObject.y) * _easing;				}			}			if (_blueSquare.dragObject.hitTestObject(blueTarget))			{				if (! _blueSquare.isDragging)				{					_blueSquare.dragObject.x += (blueTarget.x - _blueSquare.dragObject.x) * _easing;					_blueSquare.dragObject.y += (blueTarget.y - _blueSquare.dragObject.y) * _easing;				}			}		}	}}