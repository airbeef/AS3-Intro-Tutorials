package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.ui.Mouse;	import flash.filters.DropShadowFilter;	import flash.filters.BitmapFilterQuality; 		public class Main_MousePointer extends MovieClip	{		//Declare variables		private var _player:Player;		private var _shadow:DropShadowFilter;				public function Main_MousePointer() 		{			//Create a new instance of the Player class			//and add it to the stage			_player = new Player();			addChild(_player);						//Hide the mouse			Mouse.hide();						//Configure drop shadow filter			_shadow = new DropShadowFilter(); 			_shadow.distance = 4; 			_shadow.angle = 120;			_shadow.strength = 0.6;			_shadow.quality = BitmapFilterQuality.LOW;			//Add drop shadow to player			_player.body.filters = [_shadow];						//Add listeners			addEventListener(Event.ENTER_FRAME,onEnterFrame);		}		private function onEnterFrame(event:Event):void		{			_player.x = mouseX;			_player.y = mouseY;		}	}}